{% extends 'base.html.twig' %}

{% block body %}
    <h1>Room list</h1>

    <table>
        <thead>
            <tr>
                <th>Roomnumber</th>
                <th>Capacity</th>
                <th>Book</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td><a href="{{ path('room_show', { 'id': room.id }) }}">{{ room.roomNumber }}</a></td>
                <td>{{ room.capacity }}</td>
                <td>{% if room.book %}Yes{% else %}No{% endif %}</td>
                <td>{{ room.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('room_show', { 'id': room.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('room_edit', { 'id': room.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('room_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
