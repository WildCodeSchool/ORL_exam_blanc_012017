{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/globalstyle.css') }}" xmlns="http://www.w3.org/1999/html">
{% endblock %}


{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-6">
                <h2 class="text-center">Nombre de chambres à réserver</h2>
                <div>
                    <label for="room">Je souhaite réserver :</label>
                    <div class="row">
                        <input class="col-xs-6 form-control" type="number" name="room">
                        <p class="col-xs-6">chambre(s)</p>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
            <div class="col-xs-6">
                <h2 class="text-center">Hôtels pouvant vous accueillir</h2>

                {{ render(controller('TravelBundle:Default:new',  {'id':activite.id})) }}

            </div>
        </div>
    </div>
{% endblock %}
